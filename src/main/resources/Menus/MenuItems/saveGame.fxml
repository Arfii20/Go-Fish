<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="750" prefWidth="1150" spacing="20" stylesheets="@../../base/dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" prefHeight="0" prefWidth="1281" spacing="20" stylesheets="@../../base/dark_theme.css">
      <Label alignment="CENTER" style="-fx-font-size: 60" text="Save Game" />
      <Region prefHeight="24" prefWidth="1281"/>
   </VBox>
   <VBox fx:id="saveGameVbox" alignment="CENTER" prefHeight="224" prefWidth="1281" style="-fx-spacing: 20">
      <Button mnemonicParsing="false" prefHeight="47" prefWidth="200" text="Empty Slot"/>
   </VBox>
   <AnchorPane prefHeight="34" prefWidth="1281" style="-fx-padding: 1">
      <Label prefHeight="48" style="-fx-font-size: 22" text="Location of the file" AnchorPane.leftAnchor="200" fx:id="saveGameLocation"/>
      <Button mnemonicParsing="false" style="-fx-text-fill: red;" text="Change Location" AnchorPane.rightAnchor="200" onMousePressed="#changeLoc"/>
   </AnchorPane>
   <VBox alignment="CENTER" prefHeight="0" prefWidth="1281" spacing="22" stylesheets="@../../base/dark_theme.css">
      <Region prefHeight="19" prefWidth="1281" />
      <Button mnemonicParsing="false" onMousePressed="#backButton" prefHeight="47" prefWidth="120" text="Back"/>
   </VBox>
   <VBox.margin>
      <Insets left="30" right="30"/>
   </VBox.margin>
</VBox>

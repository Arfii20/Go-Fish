<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ScrollPane?>
<StackPane prefHeight="720" prefWidth="1280" stylesheets="@dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
     <VBox alignment="CENTER">
         <VBox.margin>
             <Insets bottom="20" />
         </VBox.margin>
        <Region prefHeight="150" prefWidth="200" />
        <Label text="Select the Card you want to play" style="-fx-font-size: 24; -fx-padding: 0 0 30 0"/>
        <ScrollPane fx:id="scrollPaneOfShowCardDeck">
            <HBox fx:id="addCardHBox" alignment="CENTER" spacing="10"/>
        </ScrollPane>

        <Region prefHeight="60" prefWidth="200" />
        <HBox fx:id="addBreathTravel" alignment="CENTER" spacing="40">
            <HBox.margin>
                <Insets bottom="10" />
            </HBox.margin>
        </HBox>
        <Label fx:id="addNamesLabel" text="If it applies to any player, select the player" style="-fx-font-size: 22"/>
        <HBox fx:id="addNamesHBox" alignment="CENTER" spacing="30">
            <VBox.margin>
                <Insets bottom="30" />
            </VBox.margin>
        </HBox>
     </VBox>
</StackPane>

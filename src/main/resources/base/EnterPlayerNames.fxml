<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="720" prefWidth="1280" spacing="20" style="-fx-padding: 20"
      stylesheets="@dark_theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <Region prefHeight="180" prefWidth="200" />
   <Label text="Add Player Name" style="-fx-font-size: 36"/>
   <TextField fx:id="getPlayerFromInput" prefHeight="30" prefWidth="400" />
   <Label fx:id="playerAdded" visible="false" style="-fx-font-size: 18"/>
   <Region prefHeight="100" prefWidth="200" />
   <Label text="Press Enter to Add the player" style="-fx-font-size: 24; -fx-text-fill: cyan"/>
</VBox>
